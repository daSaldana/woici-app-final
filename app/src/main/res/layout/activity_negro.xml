<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.proaiscool.woici_app_final.tip"
    android:orientation="vertical">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/imageView2"
        android:src="@drawable/tip1"
        android:scaleType="centerCrop"
        android:translationZ="-1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/menu"
        android:layout_gravity="center"
        android:weightSum="1">


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton"
            android:layout_gravity="center"
            android:src="@drawable/icomenu"
            android:background="#00ffffff"
            android:layout_weight="0.06"
            android:scaleType="fitCenter"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton2"
            android:layout_weight="0.06"
            android:src="@drawable/icolupa"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_marginLeft="235dp"
            android:background="#00ffffff" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="505dp"
        android:background="#fff7f7f7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1"
            android:id="@+id/linearLayout2">


            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageButton3"
                android:src="@drawable/pinrojo"
                android:scaleType="centerCrop"
                android:background="#00ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Santiago"
                android:id="@+id/textView"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:textColor="#ffff6750" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="/comidas"
                android:id="@+id/textView2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout2"
            android:id="@+id/linearLayout3">


            <ImageButton
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/imageButton4"
                android:background="#ffffffff"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton5"
                android:src="@drawable/icolupa"
                android:scaleType="centerCrop" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp"
            android:background="#ffffffff">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/lugar3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Liguria"
                android:id="@+id/textView3"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Restaurant/coctail bar"
                android:id="@+id/textView4"
                android:layout_below="@+id/textView3"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3" />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageButton6"
                android:src="@drawable/pinazul"
                android:scaleType="centerCrop"
                android:background="#00ffffff"
                android:layout_below="@+id/textView4"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="AV. providencia"
                android:id="@+id/textView5"
                android:layout_toEndOf="@+id/imageButton6"
                android:textSize="14dp"
                android:layout_alignBottom="@+id/imageButton6"
                android:layout_toRightOf="@+id/imageButton6" />

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_below="@+id/imageButton6"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:background="#fff8f8f8"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:id="@+id/relativeLayout">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageButton7"
                    android:src="@drawable/icolike"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="26dp"
                    android:background="#00ffffff"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageButton8"
                    android:layout_alignTop="@+id/imageButton7"
                    android:layout_toRightOf="@+id/imageButton7"
                    android:layout_toEndOf="@+id/imageButton7"
                    android:src="@drawable/estrellagris"
                    android:scaleType="centerCrop"
                    android:background="#00ffffff"
                    android:layout_marginLeft="20dp" />

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imageButton9"
                    android:layout_toEndOf="@+id/imageButton8"
                    android:src="@drawable/icolugarficha"
                    android:scaleType="centerCrop"
                    android:background="#00ffffff"
                    android:layout_marginLeft="20dp"
                    android:layout_alignBottom="@+id/imageButton8"
                    android:layout_toRightOf="@+id/imageButton8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="150"
                    android:id="@+id/textView6"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="30"
                    android:id="@+id/textView7"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/textView6"
                    android:layout_toEndOf="@+id/textView6"
                    android:layout_marginLeft="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="800"
                    android:id="@+id/textView8"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/imageButton8"
                    android:layout_toEndOf="@+id/imageButton8"
                    android:layout_marginLeft="20dp" />
            </RelativeLayout>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageButton10"
                android:layout_below="@+id/relativeLayout"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:src="@drawable/Us2"
                android:scaleType="centerCrop"
                android:background="#00ffffff"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Recomendado por"
                android:id="@+id/textView9"
                android:layout_toEndOf="@+id/imageButton10"
                android:textSize="10dp"
                android:layout_alignTop="@+id/imageButton10"
                android:layout_alignRight="@+id/textView5"
                android:layout_alignEnd="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Javiera Diaz"
                android:id="@+id/textView10"
                android:layout_below="@+id/textView9"
                android:layout_toRightOf="@+id/imageButton10"
                android:layout_toEndOf="@+id/imageButton10" />

        </RelativeLayout>




    </RelativeLayout>


















</LinearLayout>